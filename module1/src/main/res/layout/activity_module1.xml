<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Module1Activity">

        <Button
            android:id="@+id/btn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="activity with bundle"
            app:layout_constraintBottom_toTopOf="@id/btn_view1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fragment with bundle"
            app:layout_constraintBottom_toTopOf="@id/btn_view2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_view" />

        <Button
            android:id="@+id/btn_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="interface with data"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_view1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>